<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="217dp"
    android:background="@drawable/driving_license_background"
    android:paddingBottom="16dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="28dp"
    tools:context="io.anyline.examples.mrz.MrzResultView">


    <TextView
        android:id="@+id/text_number"
        style="@style/MrzResultText"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/secondary_text"
        tools:text="1234564XY"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/text_given_names"
        style="@style/MrzResultText"
        android:layout_below="@+id/text_number"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="6dp"
        android:textSize="@dimen/primary_text"
        tools:text="PETER PAUL JOHN"
        />

    <TextView
        android:id="@+id/text_day_of_birth"
        style="@style/MrzResultText"
        android:layout_below="@+id/text_given_names"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="6dp"
        android:textSize="@dimen/secondary_text"
        tools:text="690609"
        />
    <TextView
        android:id="@+id/text_number2"
        style="@style/MrzResultText"
        android:layout_below="@+id/text_day_of_birth"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="6dp"
        android:textSize="@dimen/secondary_text"
        tools:text="180102"
        />
</merge>